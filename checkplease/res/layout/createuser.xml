<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="110px"
        android:layout_weight="0.66" >


        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:orientation="vertical" >

        <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Firstname"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/fname"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:hint="John">
	
	        <requestFocus />
	    </EditText>
	
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Last Name"
	        android:textAppearance="?android:attr/textAppearanceSmall" android:paddingTop="10px"/>
	
	    <EditText
	        android:id="@+id/lname"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:hint="Doe"/>
	
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Email"
	        android:textAppearance="?android:attr/textAppearanceSmall" android:paddingTop="10px"/>
	
	    <EditText
	        android:id="@+id/email_cu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textEmailAddress" android:hint="johndoe@mail.com"/>
	
	    <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Username"
	        android:textAppearance="?android:attr/textAppearanceSmall" android:paddingTop="10px"/>
	
	    <EditText
	        android:id="@+id/username_cu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
			android:inputType="textEmailAddress" android:hint="jdoe2011"/>
	    <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Balance"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <EditText
	        android:id="@+id/balance_cu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:inputType="numberDecimal"/>
	
	
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Password"
	        android:textAppearance="?android:attr/textAppearanceSmall" android:paddingTop="10px"/>
	
	    <EditText
	        android:id="@+id/password_cu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword"/>
	
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Re-enter Password"
	        android:textAppearance="?android:attr/textAppearanceSmall" android:paddingTop="10px"/>
	
	    <EditText
	        android:id="@+id/repassword_cu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword" />
	
	    <Button
	        android:id="@+id/create_account"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Create Account" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>